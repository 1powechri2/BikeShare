<div class='form'>
  <%= form_for [:admin, @condition] do |f| %>
    <div>
    <%= f.label :cond_date%>
    <%= f.text_field :cond_date %>
    </div>
    <div>
    <%= f.label :max_temperature %>
    <%= f.number_field :max_temperature %>
    </div>
    <div>
    <%= f.label :mean_temperature %>
    <%= f.number_field :mean_temperature %>
    </div>
    <div>
    <%= f.label :min_temperature %>
    <%= f.number_field :min_temperature %>
    </div>
    <div>
    <%= f.label :mean_humidity %>
    <%= f.number_field :mean_humidity %>
    </div>
    <div>
    <%= f.label :mean_visibility %>
    <%= f.number_field :mean_visibility %>
    </div>
    <div>
    <%= f.label :mean_wind_speed %>
    <%= f.number_field :mean_wind_speed %>
    </div>
    <div>
    <%= f.label :precipitation %>
    <%= f.number_field :precipitation %>
    </div>
    <div>
    <%= f.submit %>
    </div>
  <% end %>
</div>
