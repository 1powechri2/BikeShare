
<% if current_user %>
  <%= link_to "Edit Profile", edit_user_path(current_user) %>
<% end %>


<p>Number of orders that are:</p>
<ul>
  <li>Ordered: <%= @ordered %></li>
  <li>Completed: <%= @completed %></li>
  <li>Paid: <%= @paid %></li>
  <li>Cancelled: <%= @cancelled %></li>
</ul>

<%= link_to "Accessories", '/admin/bike-shop' %>


<p>Choose which orders to view:
  <%= form_tag(admin_dashboard_path, method: :get) do %>
    <%= select_tag(:status, options_for_select(['', 'all', 'ordered', 'completed', 'paid', 'cancelled'])) %>
    <%= submit_tag 'Sort' %>
  <% end %>

  <!-- <%= link_to "All", admin_dashboard_path %>
  <%= link_to "Ordered", admin_dashboard_path(status: 'ordered') %>
  <%= link_to "Completed", admin_dashboard_path(status: 'completed') %>
  <%= link_to "Paid", admin_dashboard_path(status: 'paid') %>
  <%= link_to "Cancelled", admin_dashboard_path(status: 'cancelled') %></p> -->

<% @orders.each do |order| %>
    <p><%= link_to "Order Number: #{order.id} - #{order.status}", user_order_path(current_user, order) %></p>
    <% if order.status == 'ordered' %>
      <%= link_to 'Cancel', admin_order_path(order, status: 'cancelled'), method: :patch %>
      <%= link_to 'Mark as Paid', admin_order_path(order, status: 'paid'), method: :patch %>
    <% elsif order.status == 'paid'%>
      <%= link_to 'Cancel', admin_order_path(order, status: 'cancelled'), method: :patch %>
      <%= link_to 'Mark as Completed', admin_order_path(order, status: 'completed'), method: :patch %>
    <% end %>
<% end %>
