<h2>Order <%= @order.id %></h2>

<p>Submitted: <%= @order.created_at %>
<p>Status: <%= @order.status %></p>
<% if @order.status == 'completed' || @order.status == 'cancelled' %>
  <p>Status updated: <%= @order.updated_at %></p>
<% end %>

<p>Name: <%= @order.first_name %> <%= @order.last_name %></p>
<p>Street Address: <%= @order.street %></p>
<p>City/State/Zip: <%= @order.city %>, <%= @order.state %> <%= @order.zip %></p>

<% @order.order_accessories.each do |ord_acc| %>
  <p><%= link_to ord_acc.accessory.title, accessory_path(ord_acc.accessory) %></p>
  <p>Quantity: <%= ord_acc.quantity %></p>
  <p>Subtotal: <%= number_to_currency(ord_acc.subtotal) %></p><br>
<% end %>

<p>Total: <%= number_to_currency(@order.total) %></p>
