<!DOCTYPE html>
<html>
  <head>
    <title>Bikeshare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><h2>BikeShare</h2></li>
        <% if current_admin? %>
          <li><p>Logged in as Admin User: <%= current_user.username %></p></li>
          <li><p><%= link_to 'Logout', logout_path, method: :delete %></p></li>
        <% elsif current_user %>
          <li><p>Logged in as <%= current_user.username %></p></li>
          <li><p><%= link_to 'Logout', logout_path, method: :delete %></p></li>
        <% else %>
          <li><p><%= link_to 'Login', login_path %></p></li>
        <% end %>
        <li style="float:right"><p>Cart Count: <%= @cart.total_count %></p></li>
      </ul>
    </nav>
    <section>
      <% flash.each do |type, message| %>
        <%= content_tag :div, message, class: type %>
      <% end %>
      <%= yield %>
    </section>
  </body>
</html>
