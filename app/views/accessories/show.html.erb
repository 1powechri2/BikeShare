<h1 class='index-title'>Welcome to the <%= @accessory.title %> page.</h1>

<p>Title: <%= @accessory.title %></p>
<img src="<%=@accessory.image%>" class="accessory-show-image">
<p>Description: <%= @accessory.description %></p>
<p>Price: <%= number_to_currency(@accessory.price) %></p>
<% if @accessory.status == 'Active' %>
  <%= button_to "Add to Cart", carts_path(accessory_id: @accessory.id) %>
<% else %>
  <p>Accessory Retired</p>
<% end %>
