<h1 class='index-title'>Welcome to the Bike Shop!</h1>

<div class='shop'>
<% @accessories.each do |accessory| %>
  <div class='shop-item' id='accessory-<%= accessory.id %>'>
    <p><%= accessory.title %></p>
    <p>$<%= accessory.price %>.00</p>
    <%= image_tag(accessory.image, size: '200x200') %>
    <%if accessory.status == 'Active' %>
      <%= button_to "Add to Cart", carts_path(accessory_id: accessory.id) %>
    <% else %>
      <p>Accessory Retired</p>
    <% end %><br>
  </div>
<% end %>
</div
